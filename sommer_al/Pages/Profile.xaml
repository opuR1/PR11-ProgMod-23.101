<Page x:Class="sommer_al.Pages.Profile"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sommer_al.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="1000
      "
      Title="Профиль пользователя" Background="#F5F5F5">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="200"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="1" Background="White" CornerRadius="10" Margin="10" 
                BorderBrush="#E0E0E0" BorderThickness="1">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Мой профиль" FontSize="28" FontWeight="Bold" 
                           Foreground="#333333" Margin="0,0,0,20" HorizontalAlignment="Center"/>

                <Border Grid.Row="1" BorderBrush="#E0E0E0" BorderThickness="0,0,0,1" Padding="0,0,0,20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Width="100" Height="100" CornerRadius="50" 
                                Background="#2196F3" Margin="0,0,20,0">
                            <TextBlock Text="{Binding UserInitials}" FontSize="36" FontWeight="Bold" 
                                       Foreground="White" HorizontalAlignment="Center" 
                                       VerticalAlignment="Center"/>
                        </Border>

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock x:Name="tbFullName" FontSize="24" FontWeight="Bold" 
                                       Foreground="#333333" Margin="0,0,0,5"/>
                            <TextBlock x:Name="tbRole" FontSize="16" Foreground="#666666" Margin="0,0,0,10"/>
                            <TextBlock x:Name="tbEmail" FontSize="14" Foreground="#666666"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <StackPanel Grid.Row="2" Margin="0,20,0,0">
                    <TextBlock Text="Личная информация" FontSize="18" FontWeight="Bold" 
                               Foreground="#333333" Margin="0,0,0,15"/>

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Логин (Email):" 
                                   FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" x:Name="tbLogin" 
                                   Margin="0,0,0,10"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Роль:" 
                                   FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" x:Name="tbRoleDetail" 
                                   Margin="0,0,0,10"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="ID пользователя:" 
                                   FontWeight="Bold" Margin="0,0,0,10"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" x:Name="tbUserId" 
                                   Margin="0,0,0,10"/>
                    </Grid>

                    <Border x:Name="borderAdditionalInfo" Margin="0,20,0,0" Padding="15" 
                            Background="#F8F9FA" CornerRadius="5">
                        <StackPanel>
                            <TextBlock x:Name="tbAdditionalInfoTitle" Text="Дополнительная информация" 
                                       FontSize="16" FontWeight="Bold" Margin="0,0,0,10"/>

                            <StackPanel x:Name="panelClientInfo" Visibility="Collapsed">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Фамилия:" 
                                               FontWeight="Bold" Margin="0,0,0,8"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="tbClientLastName" 
                                               Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Имя:" 
                                               FontWeight="Bold" Margin="0,0,0,8"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="tbClientFirstName" 
                                               Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Отчество:" 
                                               FontWeight="Bold" Margin="0,0,0,8"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="tbClientSurName" 
                                               Margin="0,0,0,8"/>
                                </Grid>
                            </StackPanel>

                            <StackPanel x:Name="panelEmployeeInfo" Visibility="Collapsed">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="150"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Фамилия:" 
                                               FontWeight="Bold" Margin="0,0,0,8"/>
                                    <TextBlock Grid.Row="0" Grid.Column="1" x:Name="tbEmployeeLastName" 
                                               Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Имя:" 
                                               FontWeight="Bold" Margin="0,0,0,8"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" x:Name="tbEmployeeFirstName" 
                                               Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Отчество:" 
                                               FontWeight="Bold" Margin="0,0,0,8"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" x:Name="tbEmployeeSurName" 
                                               Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Телефон:" 
                                               FontWeight="Bold" Margin="0,0,0,8"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" x:Name="tbEmployeePhone" 
                                               Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="4" Grid.Column="0" Text="Должность:" 
                                               FontWeight="Bold" Margin="0,0,0,8"/>
                                    <TextBlock Grid.Row="4" Grid.Column="1" x:Name="tbEmployeePosition" 
                                               Margin="0,0,0,8"/>
                                </Grid>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <StackPanel Grid.Row="4" Margin="0,30,0,0" HorizontalAlignment="Center">
                    <Button x:Name="btnChangePassword" Content="Сменить пароль" 
                            Click="btnChangePassword_Click" Height="40" Width="200"
                            Background="#2196F3" Foreground="White" FontSize="14"
                            Margin="0,0,0,15"/>

                    <Button x:Name="btnSecuritySettings" Content="Настройки безопасности" 
                            Click="btnSecuritySettings_Click" Height="40" Width="200"
                            Background="#4CAF50" Foreground="White" FontSize="14"
                            Margin="0,0,0,15"/>
                </StackPanel>

                <Button Grid.Row="5" x:Name="btnBack" Content="Назад" 
                        Click="btnBack_Click" Height="35" Width="120"
                        HorizontalAlignment="Left" Margin="0,20,0,0"/>
            </Grid>
        </Border>
    </Grid>
</Page>