<Page x:Class="sommer_al.Pages.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sommer_al.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="1000"
      Title="Page1" Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260" />
            <ColumnDefinition />
            <ColumnDefinition Width="260" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Email" FontWeight="Bold"/>
            <TextBox x:Name="tbLogin" Height="30" Width="250" Margin="0,0,0,10"/>
            <TextBlock Text="Пароль" FontWeight="Bold"/>
            <PasswordBox x:Name="tbPassword" Height="30" Width="250" Margin="0,0,0,10"/>
            <CheckBox x:Name="chkIsEmployee" Content="Сотрудник?" Margin="0,0,0,10" 
                      FontFamily="Comic Sans MS" FontSize="14"/>

            <TextBlock x:Name="tblCaptcha" Text="Капча" Visibility="Collapsed" FontWeight="Bold"/>
            <TextBox x:Name="tbCaptcha" Visibility="Collapsed" Height="30" Width="250" Margin="0,0,0,10"/>

            <Border x:Name="borderTwoFactor" Visibility="Collapsed" BorderBrush="#4CAF50" 
                    BorderThickness="2" Margin="0,10,0,10" Padding="15" CornerRadius="8"
                    Background="#E8F5E9">
                <StackPanel>
                    <TextBlock Text="Двухфакторная аутентификация" FontWeight="Bold" 
                               FontSize="16" Margin="0,0,0,10" Foreground="#2E7D32"/>
                    <TextBlock x:Name="tbTwoFactorInfo" Text="На ваш email отправлен код подтверждения" 
                               TextWrapping="Wrap" Margin="0,0,0,10"/>
                    <TextBlock Text="Введите 4-значный код:" FontWeight="Bold"/>
                    <TextBox x:Name="tbTwoFactorCode" MaxLength="4" Height="30" Width="120"
                             HorizontalAlignment="Left" Margin="0,5,0,10"/>
                    <StackPanel Orientation="Horizontal">
                        <Button x:Name="btnVerifyTwoFactor" Content="Подтвердить" 
                                Click="btnVerifyTwoFactor_Click" Height="35" Width="120"
                                Background="#4CAF50" Foreground="White" Margin="0,0,10,0"/>
                        <Button x:Name="btnCancelTwoFactor" Content="Отмена" 
                                Click="btnCancelTwoFactor_Click" Height="35" Width="100"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <TextBlock x:Name="tbTimer" Foreground="Red" FontWeight="Bold" 
                       TextAlignment="Center" Visibility="Collapsed" Margin="0,10,0,10"/>

            <StackPanel Orientation="Horizontal" Height="80" HorizontalAlignment="Center">
                <Button x:Name="btnRegister" Margin="5,15,5,5" Content="Регистрация" 
                        Click="btnRegister_Click" Height="35" Width="120"/>
                <Button x:Name="btnEnter" Margin="5,15,5,5" Content="Войти" 
                        Click="btnEnter_Click" Height="35" Width="120" Background="#2196F3" Foreground="White"/>
            </StackPanel>

            <Button x:Name="ChangePassword" Content="Забыли пароль?" Click="ChangePassword_Click" 
                    Height="35" Width="125" Background="Transparent" BorderThickness="0" 
                    Foreground="#2196F3" FontWeight="Bold" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Page>