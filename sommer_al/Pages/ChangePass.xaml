<Page x:Class="sommer_al.Pages.ChangePass"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sommer_al.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="1000"
      Title="ChangePass" Background="White">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260" />
            <ColumnDefinition />
            <ColumnDefinition Width="260" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Border x:Name="step1Border" BorderBrush="LightGray" BorderThickness="1" 
                    Padding="20" CornerRadius="5" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Восстановление пароля" FontSize="20" FontWeight="Bold" 
                               Margin="0,0,0,10" HorizontalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,10">
                        <RadioButton x:Name="rbClient" Content="Клиент" IsChecked="True" Margin="0,0,20,0"/>
                        <RadioButton x:Name="rbEmployee" Content="Сотрудник"/>
                    </StackPanel>
                    <TextBlock Text="Введите ваш email:" Margin="0,0,0,5"/>
                    <TextBox x:Name="tbLogin" Height="30" Width="250"/>
                    <TextBlock x:Name="tbStep1Error" Foreground="Red" TextWrapping="Wrap" 
                               Margin="0,5,0,0" Visibility="Collapsed"/>
                    <Button x:Name="btnSendCode" Content="Отправить код" Margin="0,10,0,0" 
                            Click="btnSendCode_Click" Height="35" Width="120"/>
                </StackPanel>
            </Border>

            <Border x:Name="step2Border" BorderBrush="LightGray" BorderThickness="1" 
                    Padding="20" CornerRadius="5" Margin="0,0,0,20" Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Text="Подтверждение email" FontSize="20" FontWeight="Bold" 
                               Margin="0,0,0,10" HorizontalAlignment="Center"/>
                    <TextBlock x:Name="tbCodeInfo" Text="Код отправлен на email" 
                               TextWrapping="Wrap" Margin="0,0,0,5"/>
                    <TextBlock Text="Введите 4-значный код:" Margin="0,10,0,5"/>
                    <TextBox x:Name="tbVerificationCode" MaxLength="4" Height="30" Width="120"
                             HorizontalAlignment="Center"/>
                    <TextBlock x:Name="tbStep2Error" Foreground="Red" TextWrapping="Wrap" 
                               Margin="0,5,0,0" Visibility="Collapsed"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button x:Name="btnResendCode" Content="Отправить код повторно" 
                                Click="btnResendCode_Click" Margin="0,0,10,0" Height="35"/>
                        <Button x:Name="btnVerifyCode" Content="Подтвердить" 
                                Click="btnVerifyCode_Click" Height="35" Width="100"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border x:Name="step3Border" BorderBrush="LightGray" BorderThickness="1" 
                    Padding="20" CornerRadius="5" Margin="0,0,0,20" Visibility="Collapsed">
                <StackPanel>
                    <TextBlock Text="Новый пароль" FontSize="20" FontWeight="Bold" 
                               Margin="0,0,0,10" HorizontalAlignment="Center"/>
                    <TextBlock Text="Введите новый пароль:" Margin="0,0,0,5"/>
                    <PasswordBox x:Name="tbNewPassword" Height="30" Width="250"/>
                    <TextBlock Text="Повторите новый пароль:" Margin="0,10,0,5"/>
                    <PasswordBox x:Name="tbConfirmPassword" Height="30" Width="250"/>
                    <TextBlock x:Name="tbStep3Error" Foreground="Red" TextWrapping="Wrap" 
                               Margin="0,5,0,0" Visibility="Collapsed"/>
                    <TextBlock x:Name="tbStep3Success" Foreground="Green" TextWrapping="Wrap" 
                               Margin="0,5,0,0" Visibility="Collapsed"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                        <Button x:Name="btnSavePassword" Content="Сохранить пароль" 
                                Click="btnSavePassword_Click" Margin="0,0,10,0" Height="35"/>
                        <Button x:Name="btnCancel" Content="Отмена" 
                                Click="btnCancel_Click" Height="35" Width="100"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <TextBlock x:Name="tbTimer" Foreground="Red" FontWeight="Bold" 
                       TextAlignment="Center" Visibility="Collapsed"/>
        </StackPanel>
    </Grid>
</Page>